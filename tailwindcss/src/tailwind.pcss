@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  input {
    @apply border
  }
}

@layer components {
  .block,
  .node {
    @apply mb-4
  }

  .node__content p,
  .node__content ul,
  .node__content ol {
    @apply mb-4 leading-normal
  }
}

.lms-title{
  @apply text-4xl;
  @apply my-2; 
}
